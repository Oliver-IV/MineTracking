<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/notication_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Comience una entrega primero"
            android:textColor="@color/blue"
            android:textSize="34sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="8dp" />

        <!-- Texto descriptivo -->
        <TextView
            android:id="@+id/notication_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No se puede reportar una congestión, mientras no esta en transcurso de una entrega."
            android:textSize="18sp"
            android:textColor="@color/grayText"
            android:gravity="center"
            android:layout_marginBottom="250dp" />


        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_btn"
            android:paddingVertical="16dp"
            android:text="Continuar"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</FrameLayout>